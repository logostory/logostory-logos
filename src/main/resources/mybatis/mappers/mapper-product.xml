<?xml version="1.0" encoding="utf-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="logos.product">

	<!-- insert product -->
	<insert id="setProduct" 
			parameterType="com.logostory.logos.product.domain.Product">
			
		insert into logos_product (f_type, f_name, f_desc, image_addr) 
		values (#{f_type}, #{f_name}, #{f_desc}, #{image_addr})	
	</insert>
