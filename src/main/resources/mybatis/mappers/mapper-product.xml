	<select id="getProductList" 
			parameterType="com.logostory.logos.product.domain.Product"
			resultType="com.logostory.logos.product.domain.Product">
			
		select * from logos_product
		<where>
			<if test="f_id != null and f_id != ''">
				and f_id = #{f_id}
			</if>
			<if test="f_name != null and f_name != ''">
				and f_name like '%${f_name}%'
			</if>
			<if test="f_desc != null and f_desc != ''">
				and f_desc like '%${f_desc}%'
			</if>
			<if test="image_addr != null and image_addr != ''">
				and image_addr like '%${image_addr}%'
			</if>
		</where>
	</select>	
	
